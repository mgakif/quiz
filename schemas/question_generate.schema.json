{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/question_generate.schema.json",
  "title": "QuestionGenerateOutput",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "language", "questions"],
  "properties": {
    "version": { "type": "string", "minLength": 1 },
    "language": { "type": "string", "enum": ["tr"] },
    "questions": {
      "type": "array",
      "minItems": 1,
      "maxItems": 100,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "difficulty", "learning_objective", "stem", "tags", "rationale"],
        "properties": {
          "type": { "type": "string", "enum": ["mcq", "matching", "short", "essay"] },
          "difficulty": { "type": "string", "enum": ["easy", "medium", "hard"] },
          "learning_objective": { "type": "string", "minLength": 3 },
          "tags": {
            "type": "array",
            "minItems": 0,
            "maxItems": 20,
            "items": { "type": "string", "minLength": 1 }
          },
          "stem": { "type": "string", "minLength": 5 },
          "rationale": {
            "type": "string",
            "minLength": 10,
            "description": "Teacher-facing explanation of why the correct answer is correct."
          },

          "mcq": {
            "type": "object",
            "additionalProperties": false,
            "required": ["choices", "correct_choice_id", "feedback"],
            "properties": {
              "choices": {
                "type": "array",
                "minItems": 3,
                "maxItems": 6,
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["id", "text"],
                  "properties": {
                    "id": { "type": "string", "pattern": "^[A-Z]$" },
                    "text": { "type": "string", "minLength": 1 }
                  }
                }
              },
              "correct_choice_id": { "type": "string", "pattern": "^[A-Z]$" },
              "feedback": {
                "type": "object",
                "additionalProperties": false,
                "required": ["correct", "distractors"],
                "properties": {
                  "correct": { "type": "string", "minLength": 1 },
                  "distractors": {
                    "type": "array",
                    "minItems": 0,
                    "items": {
                      "type": "object",
                      "additionalProperties": false,
                      "required": ["choice_id", "why_wrong"],
                      "properties": {
                        "choice_id": { "type": "string", "pattern": "^[A-Z]$" },
                        "why_wrong": { "type": "string", "minLength": 1 }
                      }
                    }
                  }
                }
              }
            }
          },

          "matching": {
            "type": "object",
            "additionalProperties": false,
            "required": ["prompts", "matches", "answer_key", "feedback"],
            "properties": {
              "prompts": {
                "type": "array",
                "minItems": 3,
                "maxItems": 12,
                "items": { "type": "string", "minLength": 1 }
              },
              "matches": {
                "type": "array",
                "minItems": 3,
                "maxItems": 12,
                "items": { "type": "string", "minLength": 1 }
              },
              "answer_key": {
                "type": "array",
                "minItems": 3,
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["prompt_index", "match_index"],
                  "properties": {
                    "prompt_index": { "type": "integer", "minimum": 0 },
                    "match_index": { "type": "integer", "minimum": 0 }
                  }
                }
              },
              "feedback": { "type": "string", "minLength": 1 }
            }
          },

          "short": {
            "type": "object",
            "additionalProperties": false,
            "required": ["expected_points", "rubric"],
            "properties": {
              "expected_points": { "type": "integer", "minimum": 1, "maximum": 20 },
              "rubric": { "$ref": "#/$defs/rubric" }
            }
          },

          "essay": {
            "type": "object",
            "additionalProperties": false,
            "required": ["expected_points", "rubric"],
            "properties": {
              "expected_points": { "type": "integer", "minimum": 5, "maximum": 100 },
              "rubric": { "$ref": "#/$defs/rubric" }
            }
          }
        },
        "allOf": [
          {
            "if": { "properties": { "type": { "const": "mcq" } }, "required": ["type"] },
            "then": { "required": ["mcq"] }
          },
          {
            "if": { "properties": { "type": { "const": "matching" } }, "required": ["type"] },
            "then": { "required": ["matching"] }
          },
          {
            "if": { "properties": { "type": { "const": "short" } }, "required": ["type"] },
            "then": { "required": ["short"] }
          },
          {
            "if": { "properties": { "type": { "const": "essay" } }, "required": ["type"] },
            "then": { "required": ["essay"] }
          }
        ]
      }
    }
  },
  "$defs": {
    "rubric": {
      "type": "object",
      "additionalProperties": false,
      "required": ["criteria"],
      "properties": {
        "criteria": {
          "type": "array",
          "minItems": 2,
          "maxItems": 10,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id", "name", "levels"],
            "properties": {
              "id": { "type": "string", "pattern": "^K[0-9]+$" },
              "name": { "type": "string", "minLength": 2 },
              "levels": {
                "type": "array",
                "minItems": 2,
                "maxItems": 6,
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["score", "description"],
                  "properties": {
                    "score": { "type": "integer", "minimum": 0 },
                    "description": { "type": "string", "minLength": 3 }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}

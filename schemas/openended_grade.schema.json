{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/openended_grade.schema.json",
  "title": "OpenEndedGradeOutput",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "total_points", "max_points", "confidence", "criteria_scores", "overall_feedback", "flags"],
  "properties": {
    "version": { "type": "string", "minLength": 1 },
    "total_points": { "type": "number", "minimum": 0 },
    "max_points": { "type": "number", "exclusiveMinimum": 0 },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "criteria_scores": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["criterion_id", "score", "max_score", "reasoning", "evidence"],
        "properties": {
          "criterion_id": { "type": "string", "pattern": "^K[0-9]+$" },
          "score": { "type": "number", "minimum": 0 },
          "max_score": { "type": "number", "exclusiveMinimum": 0 },
          "reasoning": { "type": "string", "minLength": 5 },
          "evidence": {
            "type": "array",
            "minItems": 0,
            "maxItems": 5,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["quote", "why_relevant"],
              "properties": {
                "quote": { "type": "string", "minLength": 1, "maxLength": 500 },
                "why_relevant": { "type": "string", "minLength": 3 }
              }
            }
          }
        }
      }
    },
    "overall_feedback": { "type": "string", "minLength": 1 },
    "flags": {
      "type": "array",
      "minItems": 0,
      "maxItems": 20,
      "items": {
        "type": "string",
        "enum": [
          "needs_teacher_review",
          "rubric_ambiguous",
          "answer_off_topic",
          "possible_hallucination",
          "too_short_to_grade",
          "possible_plagiarism_signal",
          "low_evidence",
          "language_unclear"
        ]
      }
    }
  }
}
